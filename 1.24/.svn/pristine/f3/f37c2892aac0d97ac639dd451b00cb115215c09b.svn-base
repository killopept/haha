.page-hotTask{
  .page-table{
    transition: all .3s;
    .border{
      border:1px solid #e9e9e9;
      font-size: 12px;
      transition: all .3s;
      &:hover{
        box-shadow: 0 1px 6px rgba(0,0,0,.2);
        border-color: transparent;
      }
      &.main{
        padding:0;
      }
    }
    .taskContent{
      padding: 24px 32px;
      .el-form{
        font-size:12px;
        &.demo-dynamic{
          .el-form-item__content{
            margin-bottom:24px;
          }
        }
        .el-input-number{
          &.grey-num{
            width:300px;
            .el-input{
              // width:300px;    
              .el-input__inner {
                padding: 0px;
              }
            }
          }
        }
        .el-input{
          input{
            width:300px;
          }
          &.grey-endtime{
            input{width:100%;}
          }   
        }
        .add-btn{
          width:420px;
          color:rgba(0,0,0,.65);
          background-color: #fff;
          border-color: #d9d9d9;
          border-style: dashed;
          &:hover{
            background-color: #fff;
            border-color: #108ee9;
            color: #108ee9;
          }
        }
        .el-textarea__inner{
          width:300px;
        }
        .el-form-item__label{
          color:rgba(0,0,0,.85);
          font-size: 12px;
        }
        .pade-table{
          width:420px;
          font-size:12px;
          margin-bottom:2px;
          border-radius:5px;
          thead{
            color: rgba(0,0,0,0.65);
            th{
              height:52px;
              padding:0px;
            }
          }
          tbody{
            td{
              height: 45px;padding:0px;
            }
          }
        }
      }
      .el-dialog__title{
        font-size:14px;
      }
      .el-dialog__body{
        border-top:1px solid #dcdfe6;
        border-bottom:1px solid #dcdfe6;
        font-size:12px;
        .el-form-item{
          font-size:12px;

        }
      }
    }
  }
}