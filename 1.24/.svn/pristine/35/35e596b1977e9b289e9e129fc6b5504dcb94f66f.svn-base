.page-pgradeTask{
  padding: 20px 30px;
  .page-table{
    transition: all .3s;
    width: 100%;margin: 0 auto;
    .border{
      border:1px solid #e9e9e9;
      font-size: 12px;
      transition: all .3s;
      margin-bottom:10px;
      color: rgb(64, 64, 64);
      line-height:60px;
      h3{
        color: rgba(0,0,0,.85);
        font-weight: 500;
        border-bottom:1px solid #e9e9e9;height:48px;line-height:48px;padding: 0 32px;
      }
      &:hover{
        box-shadow: 0 1px 6px rgba(0,0,0,.2);
        border-color: transparent;
      }
      &.main{
        padding:0;
      }
      &.el-header{
        a{
          color: rgb(64, 64, 64);
          font-size: 14px;
          font-weight: 600;
          i{
            margin-right:15px;
          }
          .head-sp{
            margin-left:10px;
          }
        }
      }
    }
    .taskContent{
      padding: 24px 32px;
      .el-form{
        font-size:12px;
        &.demo-dynamic{
          .el-form-item__content{
            margin-bottom:24px;
          }
        }
        .el-input-number{
          &.grey-num{
            width:35%;
            .el-input{   
              .el-input__inner {
                padding: 0px;
              }
            }
          }
        }
        .el-input{
          input{
            width:100%;
          }
          &.grey-endtime{
            input{width:80%;}
            .el-input__suffix{
              right:65px;
            }
          }   
        }
        .add-btn{
          width:55%;
          color:rgba(0,0,0,.65);
          background-color: #fff;
          border-color: #d9d9d9;
          border-style: dashed;
          &:hover{
            background-color: #fff;
            border-color: #108ee9;
            color: #108ee9;
          }
        }
        .el-textarea__inner{
          width:35%;
        }
        .el-form-item__label{
          font-size: 12px;
          font-weight: 600;
        }
        .pade-table{
          width:55%;
          font-size:12px;
          margin-bottom:2px;
          border-radius:5px;
          thead{
            color: rgba(0,0,0,0.65);
            th{
              height:52px;
              padding:0px;
            }
          }
          tbody{
            td{
              height: 45px;padding:0px;
            }
          }
        }
      }
      .el-table tbody tr td{
        font-weight:normal;
      }
    }
    .el-form-item{
      font-size:12px;
    }
    .el-radio__label{
      font-size:12px;
      
    }
    .el-textarea__inner{
      font-size:12px;
    }
    .el-input--small{
      font-size:12px;
    }
  }
}
.el-select-dropdown__item{
  font-size: 12px!important;
}